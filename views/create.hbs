

    <section class="create-form-container">

        <form action="/books/create" method="POST">
            <h3>Create Book Review</h3>
            <label>Title</label>
            <input type="text" name="title" class="box" id="" value="{{bookData.title}}">
            <label>Author</label>
            <input type="text" name="author" class="box" id="" value="{{bookData.author}}">
            <label>Genre</label>
            <input type="text" name="genre" class="box" id="" value="{{bookData.genre}}">
            <label>Stars</label>
            <input type="number" name="stars" class="box" id="" value="{{bookData.stars}}">
            <label>Image</label>
            <input type="text" name="imageUrl" class="box" id="" value="{{bookData.imageUrl}}">
            <label>Review</label>
            <textarea class="box" name="bookReview">{{bookData.bookReview}}</textarea>
            <input type="submit" value="Create" class="btn">
        </form>
    </section>
